use strict;
use Sys::Hostname;
use Neos;

Neos::load_config($Neos::config_dump);

my $job_partition = Neos::get_partition ();

if (Neos::is_good_partition($job_partition)) {
    Neos::init ();

    Neos::load_scenario(Neos::get_param('scenario'));
    Neos::run_action('task');
}
