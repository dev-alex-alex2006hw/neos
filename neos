use strict;
use Getopt::Long;
use Sys::Hostname;
use Neos;

use Switch;

# Job parameters
my $job_partition = Neos::get_partition ();
my $resolution = Neos::get_vncres ();
my $scenario = "";
my $result = GetOptions ("resolution=s" => \$resolution,
                         "scenario=s"   => \$scenario,
                         "config=s"     => \&Neos::config_file_handler,
);

# Save user specified configuration (cli options and .conf file content)
Neos::set_param('resolution', $resolution);
Neos::set_param('scenario', Neos::get_scenario_name ($scenario));
if ($ENV{'ENVIRONMENT'} eq "BATCH") {
    Neos::set_param('password', Neos::gen_password ());
}
Neos::dump_config();

if (Neos::is_good_partition($job_partition)) {
    Neos::init ();

    Neos::load_scenario($scenario);
    Neos::run_action('main');
} else {
    die("$job_partition is not configured for Neos.");
}
